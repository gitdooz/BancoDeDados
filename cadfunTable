CREATE TABLE cadfun (CODFUN  NUMBER,
                     NOME    VARCHAR2(40),
                     DEPTO   VARCHAR2(2),
                     FUNCAO  VARCHAR2(20),
                     SALARIO NUMBER(10,2));
-------------------------------------------------------------------------------   
